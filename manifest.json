{
  "name": "MP3 File Downloader",
  "description": "Auto download the http://music.163.com/ to the folder.",
  "version": "1",
  "minimum_chrome_version": "17.0.0",
  "icons": {"128": "icon128.png"},
  "browser_action": {
    "default_icon": {
    "19": "icon19.png",
    "38": "icon38.png"},
    "default_title": "__MSG_extName__",
    "default_popup": "options.html"
  },

  "background": {
    "scripts": ["bg.js"]
  },
  
  "options_page": "options.html",

  "permissions": [
    "downloads",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],

  "manifest_version": 2
}
